                    <a class="dropdown-item" role="presentation" href="#">Third Item</a>
                </div>
            </div>*@
                            </div>
                            @Html.ValidationMessageFor(m => m.date, "", new { @class = "text-danger" })
                            <div class="mt-3"><label>Date:</label>
                                @Html.TextBoxFor(m=>m.date,new { @class="form-control", @id="datePicker" , @type="date" , @name="date"})
                            @*<input class="form-control" id="datePicker" type="date" name="date"></div>*@
                            <div><label>Notes:</label><textarea class="form-control" name="notes"></textarea></div>
                            <div class="mt-3"><button class="btn btn-primary col" type="submit" id="submit">Save</button></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
