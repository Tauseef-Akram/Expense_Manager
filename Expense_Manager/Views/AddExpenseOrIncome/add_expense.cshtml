@model Models.Records
@{
    ViewBag.Title = "Add Expense/Income";
    Layout = "~/Views/Shared/_Master_Layout.cshtml";
}


@{
    string userId = "";
    HttpCookie cookieObj = Context.Request.Cookies.Get("info");
    if (cookieObj != null)
    {
        userId = cookieObj["id"];
    }
}
<input id="useridHidden" type="hidden" value=@userId>     @*Setting user id here*@

<div>
    <label hidden="hidden" id="ScreenName" value="Add Expense"></label>
    <div class="container d-lg-flex justify-content-lg-center align-items-lg-center">
        <div class="col-3">
            <!-- Start: Card Success -->
            <div class="card shadow border-left-success py-2">
                <div class="card-body">
                    <div class="row align-items-center no-gutters">
                        <div class="col mr-2">
                            <div class="text-uppercase text-success font-weight-bold text-xs mb-1"><span>Income (monthly)</span></div>
                            <div class="text-dark font-weight-bold h5 mb-0"><span>4500</span></div>
                        </div>
                        <div class="col-auto"><i class="fas fa-dollar-sign fa-2x text-gray-300"></i></div>
                    </div>
                </div>
            </div>
            <!-- End: Card Success -->
        </div>
        <div class="col-3">
            <!-- Start: Card Success -->
            <div class="card shadow border-left-danger py-2">
                <div class="card-body">
                    <div class="row align-items-center no-gutters">
                        <div class="col mr-2">
                            <div class="text-uppercase text-success font-weight-bold text-xs mb-1"><span>Expense (monthly)</span></div>
                            <div class="text-dark font-weight-bold h5 mb-0"><span>500</span></div>
                        </div>
                        <div class="col-auto"><i class="fas fa-dollar-sign fa-2x text-gray-300"></i></div>
                    </div>
                </div>
            </div>
            <!-- End: Card Success -->
        </div>
        <div class="col-3">
            <!-- Start: Card Primary -->
            <div class="card shadow border-left-primary py-2">
                <div class="card-body">
                    <div class="row align-items-center no-gutters">
                        <div class="col mr-2">
                            <div class="text-uppercase text-primary font-weight-bold text-xs mb-1"><span>balance (monthly)</span></div>
                            <div class="text-dark font-weight-bold h5 mb-0"><span>4000</span></div>
                        </div>
                        <div class="col-auto"><i class="fas fa-dollar-sign fa-2x text-gray-300"></i></div>
                    </div>
                </div>
            </div>
            <!-- End: Card Primary -->
        </div>
    </div>
</div>
