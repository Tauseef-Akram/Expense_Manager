                                    <div class="custom-control custom-radio custom-control-inline"><input type="radio" id="customRadioInline2" class="custom-control-input" name="expense_income" value="true"><label class="custom-control-label" for="customRadioInline2">Income</label></div>
                                </fieldset>
                            </div>
                            @Html.ValidationMessageFor(m => m.amount, "", new { @class = "text-danger" })
